<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_box"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textColor="#4C4B4B"
            android:textSize="22sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CBC9C9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/startdate_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <Button
                    android:id="@+id/startdate"
                    android:layout_width="80dp"

                    android:layout_height="40dp"
                    android:background="@drawable/cal_button_border"
                    android:text="Start Date"
                    android:textColor="@color/black"

                    android:textSize="12sp" />
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#E6E5E5">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/startdatepicker"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar_icon"
                        android:text="Start_Date" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/enddate_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingStart="32dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/enddate"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/cal_button_border"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#E6E5E5">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/enddatepicker"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar_icon"
                    android:text="Start_Date" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:paddingTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/fetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyButton"
            android:layout_gravity="center"
            android:text="Search"
            android:textAllCaps="true"
            android:textColor="@color/white"
             />
    </LinearLayout>
    <!--android:background="@drawable/cal_button_focus"-->

</LinearLayout>